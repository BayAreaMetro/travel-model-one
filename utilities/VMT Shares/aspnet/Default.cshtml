@{
    Layout = "~/_SiteLayout.cshtml";
    Page.Title = "VMT 1 2 3";

    var db = Database.Open("VMTShares");  // references Web.config connectionString
    var vmtQueryString = "EXEC [lzorn].[vmtshares] @tazlist=@0"; // call my stored procedure
    var areaname = "";
    var tazs_str = "";
    var year = 2010;
    var runid = "2010_03_YYY";
    if (IsPost)
    {
        areaname = Request.Form["areaname"];
        tazs_str = Request.Form["tazs"];
        // todo: check tazs_str
    }
}

@section featured {
<section class="featured">
    <div class="content-wrapper">
        <hgroup class="title">
            <h1>@Page.Title.</h1>
        </hgroup>
        <p>
            Instructions!
        </p>
    </div>
</section>
}

<form method="post">
    <ol class="round">
        <li class="one">
            <label for="AreaName">Area Name:</label>
            Example: 'Albany' <br />
            <input type="text" name="areaname" value="@Request.Form["areaname"]" />
        </li>
        <li class="two">
            <label for="AreaTAZs">TAZs of Interest:</label>
            Example: '1034,1035,1036,1037,1038,1039' <br />
            <input type="text" name="tazs" value="@Request.Form["tazs"]" />
        </li>
        <li class="three">
            <input type="submit" value="Submit" class="submit" />
        </li>
    </ol>
</form>

<table>
    <thead>
        <tr>
            <th rowspan="2">Lives</th>
            <th rowspan="2">Works</th>
            <th rowspan="2">Persons</th>
            <th colspan="8">Non-commercial Passenger Vehicle Miles Traveled</th>
        </tr>
        <tr>
            <th colspan="2" style="width:100px">Entirely within</th>
            <th colspan="2" style="width:100px">Partially in</th>
            <th colspan="2" style="width:100px">Entirely outside</th>
            <th colspan="2" style="width:100px">Total</th>
        </tr>
    </thead>
    @if (tazs_str.Length > 0)
    {
        <h1>@areaname</h1>
        <h2>(Simulation Year @year; Simulation ID: @runid)</h2>
        System.Globalization.NumberFormatInfo nfi = new System.Globalization.CultureInfo("en-US", false).NumberFormat;
        nfi.NumberDecimalDigits = 0;

        foreach (var row in db.Query(vmtQueryString, tazs_str))
        {
            var pct_within = row.vmt_within / row.vmt_total;
            var pct_partial = row.vmt_partial / row.vmt_total;
            var pct_outside = row.vmt_outside / row.vmt_total;
            var pct_total = row.vmt_total / row.vmt_total;
            <tr>
                @if (row.live_in_area == 1) {
                  <td>Live in area</td>
                } else {
                  <td>Live out of area</td>
                }
                @if (row.work_in_area == 1) {
                  <td>Work in area</td>
                } else if (row.work_in_area == -1) {
                  <td>Non-worker</td>
                } else {
                  <td>Work out of area</td>
                }
                <td class="number">@row.persons.ToString("N", nfi)</td>
                <td class="number">@row.vmt_within.ToString("N", nfi)</td>
                <td class="number">@pct_within.ToString("P1", System.Globalization.CultureInfo.InvariantCulture)</td>
                <td class="number">@row.vmt_partial.ToString("N", nfi)</td>
                <td class="number">@pct_partial.ToString("P1", System.Globalization.CultureInfo.InvariantCulture)</td>
                <td class="number">@row.vmt_outside.ToString("N", nfi)</td>
                <td class="number">@pct_outside.ToString("P1", System.Globalization.CultureInfo.InvariantCulture)</td>
                <td class="number">@row.vmt_total.ToString("N", nfi)</td>
                <td class="number">@pct_total.ToString("P1", System.Globalization.CultureInfo.InvariantCulture)</td>
            </tr>
        }
    }
</table>