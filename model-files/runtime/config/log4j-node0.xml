<?xml version="1.0"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<!--
 A simple configuration file for the Log4j logging classes. Basic FILE and CONSOLE
 Appenders are created. Also, info logger output is sent to a separate info-FILE.
 
-->
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">

            <param name="ConversionPattern" value="%d{dd-MMM-yyyy HH:mm:ss}, %p, %m%n"/>

        </layout>        
    </appender>



    <appender name="FILE" class="org.apache.log4j.FileAppender">
        <param name="File" value="./logs/event-node0.log"/>
        <param name="Append" value="false"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{dd-MMM-yyyy HH:mm:ss}, %p, %m%n"/>
        </layout>        
    </appender>


